{
  "name": "lumos-backend-api",
  "version": "1.0.0",
  "description": "API Backend completa para Lumos Moda Fitness E-commerce",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "build": "npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "redis": "^4.6.7",
    "axios": "^1.5.0",
    "mercadopago": "^1.5.17",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "nodemailer": "^6.9.4",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/migrations/**",
      "!src/database/seeds/**"
    ]
  }
}