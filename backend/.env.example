# ============= CONFIGURAÇÃO DO AMBIENTE =============
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3002

# ============= BANCO DE DADOS POSTGRESQL =============
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lumos_db
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lumos_db

# ============= REDIS CACHE =============
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_REQUIRED=false

# ============= JWT AUTHENTICATION =============
JWT_SECRET=sua_chave_secreta_jwt_muito_segura_aqui
JWT_REFRESH_SECRET=sua_chave_refresh_token_muito_segura_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============= MERCADO PAGO =============
MP_ACCESS_TOKEN=seu_access_token_mercado_pago
MP_PUBLIC_KEY=sua_public_key_mercado_pago
MP_WEBHOOK_SECRET=seu_webhook_secret_mercado_pago

# ============= OMIE ERP =============
OMIE_APP_KEY=sua_app_key_omie
OMIE_APP_SECRET=seu_app_secret_omie
OMIE_BASE_URL=https://app.omie.com.br/api/v1

# ============= SERVIÇOS DE FRETE =============
# Correios
CORREIOS_USER=seu_usuario_correios
CORREIOS_PASSWORD=sua_senha_correios
CORREIOS_CODIGO_EMPRESA=
CORREIOS_CARTAO_POSTAGEM=

# Loggi
LOGGI_API_KEY=sua_api_key_loggi
LOGGI_BASE_URL=https://api.loggi.com

# Frenet
FRENET_TOKEN=seu_token_frenet
FRENET_BASE_URL=https://api.frenet.com.br

# ============= AWS S3 =============
AWS_ACCESS_KEY_ID=sua_access_key_aws
AWS_SECRET_ACCESS_KEY=sua_secret_key_aws
AWS_REGION=us-east-1
AWS_S3_BUCKET=lumos-fitness-images
AWS_CLOUDFRONT_URL=https://sua-distribuicao.cloudfront.net

# ============= EMAIL =============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_de_app
EMAIL_FROM=noreply@lumosfitness.com
EMAIL_FROM_NAME=Lumos Fitness

# ============= LOGGING =============
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=10MB

# ============= RATE LIMITING =============
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_CHECKOUT_MAX=3

# ============= SEGURANÇA =============
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://lumosfitness.github.io
HELMET_CSP_ENABLED=true

# ============= MONITORAMENTO =============
SENTRY_DSN=sua_dsn_sentry
DATADOG_API_KEY=sua_api_key_datadog
NEW_RELIC_LICENSE_KEY=sua_license_key_new_relic

# ============= CONFIGURAÇÕES DE NEGÓCIO =============
FRETE_GRATIS_MINIMO=250.00
TAXA_MERCADO_PAGO=4.99
CEP_ORIGEM=01310-100
PESO_PADRAO_PRODUTO=0.200

# ============= CONFIGURAÇÕES DE UPLOAD =============
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=./uploads

# ============= WEBHOOKS =============
WEBHOOK_SECRET=sua_chave_secreta_webhook
